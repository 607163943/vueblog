<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 日志根目录（相对项目根目录） -->
    <property name="LOG_HOME" value="logs"/>

    <!-- 控制台输出（开发用） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 和你 yml 里的 console pattern 基本一致 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%logger{36}] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 文件输出，按日期+大小滚动 -->
    <!-- 文件输出，按【年月日目录 + 大小】滚动 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--必写，否则日志文件不会生成-->
        <file>${LOG_HOME}/app.log</file>

        <!-- 使用 SizeAndTimeBasedRollingPolicy（包含时间+大小双重控制） -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- 归档文件名：logs/2025/11/14/app.2025-11-14.0.log -->
            <fileNamePattern>
                ${LOG_HOME}/%d{yyyy/MM/dd}/app.%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>

            <!-- 单个文件最大 50MB 就滚动，超过会增加 .1 .2 ... -->
            <maxFileSize>50MB</maxFileSize>

            <!-- 保留 30 天内的日志 -->
            <maxHistory>30</maxHistory>

            <!-- 整个日志目录大小上限 5GB -->
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%logger{36}] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 业务包日志级别（和 yml 中保持一致） -->
    <logger name="com.project.blog" level="INFO"/>

    <!-- 根日志：WARN 级别，输出到控制台 + 文件 -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
